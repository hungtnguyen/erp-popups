<% content_for :title do %>
    <%= @popup.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_popups.backend_popups_path %>">
    <i class="fa fa-picture-o"></i> <%= t('.popups') %>
    </a> / <%= @popup.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_popups.new_backend_popup_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @popup.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', popup: @popup %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>